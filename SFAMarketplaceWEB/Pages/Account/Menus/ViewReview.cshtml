@page
@model SFAMarketplaceWEB.Pages.Account.Menus.ViewReviewModel
@{
    Layout = HttpContext.User.Identity.IsAuthenticated ? "_LayoutAuthenticated" : "_Layout";

}
<h2>Reviews for @Model.PostedBy</h2>

@if (Model.SellerReviews.Any())
{
    <p>Average Rating: @Model.AverageRating.ToString("N2")</p>
    foreach (var review in Model.SellerReviews)
    {
        <div>
            <p>Rating: @review.Rating - @review.Comment</p>
            <p>Date: @review.TransactionDate.ToShortDateString()</p>
        </div>
    }
}
else
{
    <p>No reviews yet.</p>
}

<a asp-page="/Account/Menus/AddReview" asp-route-sellerId="@Model.SellerID">Write a Review</a>