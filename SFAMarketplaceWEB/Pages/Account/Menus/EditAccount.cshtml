@page
@using System.Security.Claims
@model SFAMarketplaceWEB.Pages.Account.Menus.EditAccountModel
@{
    Layout = User.Claims.Any(c => c.Type == ClaimTypes.Role && c.Value == "Admin") ?
             "_LayoutAuthenticatedAdmin" :  // Admin-specific layout
             "_LayoutAuthenticated";        // Regular user layout
}

@section Styles {
    <link rel="stylesheet" href="~/css/AddItemStyleSheet.css" />
}

<div class="item-form-container">
    <h2 class="form-title">Edit User</h2>
    <div asp-validation-summary="All" class="text-danger"></div>

    @if (!ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <strong>Validation error(s):</strong>
            <ul>
                @foreach (var modelState in ViewData.ModelState.Values)
                {
                    foreach (var error in modelState.Errors)
                    {
                        <li>@error.ErrorMessage</li>
                    }
                }
            </ul>
        </div>
    }

    <form method="post">
        <input type="hidden" asp-for="UserEdit.UserId" />

        <div class="form-group">
            <label asp-for="UserEdit.ProfilePictureURL">Profile Picture URL</label>
            <input asp-for="UserEdit.ProfilePictureURL" class="form-control" />
            <span asp-validation-for="UserEdit.ProfilePictureURL" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="UserEdit.FirstName">First Name</label>
            <input asp-for="UserEdit.FirstName" class="form-control" />
            <span asp-validation-for="UserEdit.FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="UserEdit.LastName">Last Name</label>
            <input asp-for="UserEdit.LastName" class="form-control" />
            <span asp-validation-for="UserEdit.LastName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="UserEdit.Username">Username</label>
            <input asp-for="UserEdit.Username" class="form-control" />
            <span asp-validation-for="UserEdit.Username" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="UserEdit.Email">Email</label>
            <input asp-for="UserEdit.Email" class="form-control" />
            <span asp-validation-for="UserEdit.Email" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Update</button>
    </form>
</div>
