@page
@model SFAMarketplaceWEB.Pages.Account.Menus.AddItemModel
@section Styles {
    <link rel="stylesheet" href="~/css/AddItemStyleSheet.css" />
}

<div class="item-form-container">
    <h2>Add New Item</h2>
    <div asp-validation-summary="All" class="text-danger"></div>

    @if (!ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <strong>Validation error(s):</strong>
            <ul>
                @foreach (var modelState in ViewData.ModelState.Values)
                {
                    foreach (var error in modelState.Errors)
                    {
                        <li>@error.ErrorMessage</li>
                    }
                }
            </ul>
        </div>
    }

    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="NewItem.ItemName"></label>
            <input asp-for="NewItem.ItemName" class="form-control" />
            <span asp-validation-for="NewItem.ItemName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NewItem.ItemDescription"></label>
            <textarea asp-for="NewItem.ItemDescription" class="form-control"></textarea>
            <span asp-validation-for="NewItem.ItemDescription" class="text-danger"></span>
        </div>

        @*
        <div class="form-group">
        <label asp-for="NewItem.ItemPhotoURL1">Photo</label>
        <input type="file" asp-for="NewItem.ItemPhotoURL1" class="form-control" />
        <span asp-validation-for="NewItem.ItemPhotoURL1" class="text-danger"></span>
        </div>
        *@
      


        <div class="form-group">
            <label asp-for="NewItem.ItemPrice"></label>
            <input asp-for="NewItem.ItemPrice" type="number" step="0.01" class="form-control" />
            <span asp-validation-for="NewItem.ItemPrice" class="text-danger"></span>
        </div>
        <div class="row m-2">
            <div class="col-2">
                <label asp-for="NewItem.CategoryID">Category:</label>
            </div>
            <div class="col-10">
                <select asp-for="NewItem.CategoryID" asp-items="Model.Categories" class="form-control">
                    <option value="">Select a Category...</option>
                </select>
                <span asp-validation-for="NewItem.CategoryID" class="text-danger"></span>
            </div>
        </div>


        <div class="form-group">
            <label asp-for="NewItem.ItemTradeStatus"></label>
            <input asp-for="NewItem.ItemTradeStatus" type="checkbox" />
            <span asp-validation-for="NewItem.ItemTradeStatus" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>


