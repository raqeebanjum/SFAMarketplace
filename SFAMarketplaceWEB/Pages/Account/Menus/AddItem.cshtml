@page
@using System.Security.Claims
@model SFAMarketplaceWEB.Pages.Account.Menus.AddItemModel
@{
    Layout = User.Claims.Any(c => c.Type == ClaimTypes.Role && c.Value == "Admin") ?
             "_LayoutAuthenticatedAdmin" :  // Admin-specific layout
             "_LayoutAuthenticated";        // Regular user layout
}

@section Styles {
    <link rel="stylesheet" href="~/css/AddItemStyleSheet.css" />
}

<div class="item-form-container">
    <h2 class="form-title">Add New Item</h2>

    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="NewItem.ItemName" class="form-label">Item Name:</label>
            <input asp-for="NewItem.ItemName" class="form-control" />
            <span asp-validation-for="NewItem.ItemName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NewItem.ItemDescription" class="form-label">Description:</label>
            <textarea asp-for="NewItem.ItemDescription" class="form-control"></textarea>
            <span asp-validation-for="NewItem.ItemDescription" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="NewItem.ItemPhotoURL1" class="form-label">Photo URL 1:</label>
            <input asp-for="NewItem.ItemPhotoURL1" class="form-control" />
            <span asp-validation-for="NewItem.ItemPhotoURL1" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NewItem.ItemPhotoURL2" class="form-label">Photo URL 2:</label>
            <input asp-for="NewItem.ItemPhotoURL2" class="form-control" />
            <span asp-validation-for="NewItem.ItemPhotoURL2" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="NewItem.ItemPhotoURL3" class="form-label">Photo URL 3:</label>
            <input asp-for="NewItem.ItemPhotoURL3" class="form-control" />
            <span asp-validation-for="NewItem.ItemPhotoURL3" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="NewItem.ItemPrice" class="form-label">Price:</label>
            <input asp-for="NewItem.ItemPrice" type="number" step="0.01" min="0" class="form-control" />
            <span asp-validation-for="NewItem.ItemPrice" class="text-danger"></span>
        </div>

        <div class="row m-2">
            <div class="col-2">
                <label asp-for="NewItem.CategoryID" class="form-label">Category:</label>
            </div>
            <div class="col-10">
                <select asp-for="NewItem.CategoryID" asp-items="Model.Categories" class="form-control" required>
                    <option value="">Select a Category...</option>
                </select>
                <span asp-validation-for="NewItem.CategoryID" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="NewItem.ItemTradeStatus" class="form-label">Trade Status:</label>
            <input asp-for="NewItem.ItemTradeStatus" type="checkbox" class="form-check-input" />
            <span asp-validation-for="NewItem.ItemTradeStatus" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary"><i class="bi bi-check2-circle"></i> Submit</button>
    </form>
</div>
