@page
@model SFAMarketplaceWEB.Pages.Account.Menus.EditProfileModel
@{
    Layout = HttpContext.User.Identity.IsAuthenticated ? "_LayoutAuthenticated" : "_Layout";
}
@if (!ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}

<!-- Your existing form here -->
<form method="post">
    <div class="form-group">
        <label asp-for="updatedPassword.OldPassword">Old Password</label>
        <input asp-for="updatedPassword.OldPassword" class="form-control" />
        <span asp-validation-for="updatedPassword.OldPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="updatedPassword.NewPassword">New Password</label>
        <input asp-for="updatedPassword.NewPassword" class="form-control" />
        <span asp-validation-for="updatedPassword.NewPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="updatedPassword.ConfirmPassword">Confirm Password</label>
        <input asp-for="updatedPassword.ConfirmPassword" class="form-control" />
        <span asp-validation-for="updatedPassword.ConfirmPassword" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Update Password</button>
</form>