@page
@model SFAMarketplaceWEB.Pages.Account.LoginModel
@section Styles{
    <link rel="stylesheet" href="~/css/LoginStyleSheet.css" />
}

<div class="form-container">
    <form method="post">
        <h2>Login</h2>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>


        <div class="form-group">
            <span asp-validation-for="LoginUser.Username" class="text-danger"></span>
            <input asp-for="LoginUser.Username" class="form-control" placeholder="Username" />
        </div>

        <div class="form-group">
            <span asp-validation-for="LoginUser.Password" class="text-danger"></span>
            <input asp-for="LoginUser.Password" class="form-control" placeholder="Password" type="password" />
        </div>

        <button type="submit" class="btn btn-primary">Login</button>

    </form>
    <div class="register-link">
        Don't have an account? <a asp-page="/Account/Register">Register here</a>
    </div>

</div>
